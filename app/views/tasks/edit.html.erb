<%= form_with(model: @task, local: true) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div class="actions">
    <%= f.submit "Update Task" %>
  </div>
<% end %>
